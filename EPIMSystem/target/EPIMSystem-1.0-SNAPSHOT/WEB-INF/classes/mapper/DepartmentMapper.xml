<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epim.mapper.DepartmentMapper">
	
	<select id="findAll" resultMap="ResultMap">
		select * from department
	</select>

	<select id="findById" resultMap="ResultMap">
		select * from department where department_number=#{id};
	</select>

	<insert id="insert">
		insert into department values
		<foreach collection="param" item="obj" open="(" separator="," close=")">
			#{obj}
		</foreach>
	</insert>

	<update id="update">
		update department
		<set>
			<foreach collection="param" item="obj" open="(" separator="," close=")">
				#{obj},
			</foreach>
		</set>
		where department_number=#{id}
	</update>

	<delete id="delete" parameterType="">
		delete from department where department_number=#{id}
	</delete>
	
	<resultMap id="ResultMap" type="com.epim.entity.Department">
		<id column="department_number" jdbcType="VARCHAR" property="department_number"></id>
		<result column="name" jdbcType="VARCHAR" property="name"></result>
		<result column="manager" jdbcType="VARCHAR" property="manager"></result>
		<result column="telephone" jdbcType="VARCHAR" property="telephone"></result>
		<result column="address" jdbcType="VARCHAR" property="address"></result>
		<result column="notes" jdbcType="VARCHAR" property="notes"></result>
	</resultMap>
</mapper>