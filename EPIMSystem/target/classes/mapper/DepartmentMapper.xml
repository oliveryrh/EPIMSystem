<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epim.mapper.DeptMapper">
	
	<select id="findAll" resultType="Department">
		select * from ${department}
	</select>

	<select id="findById" resultType="Department">
		select * from ${depatment} where department_number=#{departmentNumber};
	</select>

	<insert id="insert">
		insert into ${depatment} values 
		<foreach collection="param" item="obj" open="(" separator="," close=")">
			#{obj}
		</foreach>
	</insert>

	<update id="update">
		update ${depatment}
		<set>
			<foreach collection="param" item="obj" open="(" separator="," close=")">
				#{obj},
			</foreach>
		</set>
		where id=#{id}
	</update>
</mapper>